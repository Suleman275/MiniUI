:root {
    width: 100%;
    height: 100%;
}

.row {
    flex-direction: row;
}

.column {
    flex-direction: column;
}

.center-align {
    align-items: center;
}

.start-align {
    align-items: flex-start;
}

.end-align {
    align-items: flex-end;
}

.space-between {
    justify-content: space-between;
}

.space-around {
    justify-content: space-around;
}


.br-12 {
    border-radius: 12px;
}

.br-24 {
    border-radius: 24px;
}